@model SignalR_Project.Application.DTOs.RoomDTO

@{
    ViewData["Title"] = "Create Room";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card room-card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Yeni Oda Oluştur</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="RoomName" class="form-label"></label>
                            <input asp-for="RoomName" class="form-control" placeholder="Oda adı girin" />
                            <span asp-validation-for="RoomName" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check mb-3">
                            <input class="form-check-input" asp-for="IsPrivate" id="IsPrivate" />
                            <label class="form-check-label" for="IsPrivate">
                                @Html.DisplayNameFor(model => model.IsPrivate)
                            </label>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="NumberOfPeople" class="form-label"></label>
                            <input asp-for="NumberOfPeople" class="form-control" placeholder="Katılımcı sayısı" />
                            <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn join-btn btn-block">Oluştur</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="text-decoration-none join-btn">Geri Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #2c2f33;
        color: #ffffff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .room-card {
        background-color: #36393f;
        border-radius: 8px;
        padding: 20px;
        transition: background 0.3s;
    }

    .room-card:hover {
        background-color: #4f545c;
    }

    .form-label {
        color: #b9bbbe;
    }

    .form-control {
        background-color: #2c2f33;
        color: #ffffff;
        border: 1px solid #4f545c;
        border-radius: 5px;
    }

    .form-control:focus {
        border-color: #7289da;
        box-shadow: 0 0 0 0.2rem rgba(114, 137, 218, 0.25);
        background-color: #2c2f33;
        color: #ffffff;
    }

    .join-btn {
        background-color: #7289da;
        color: white;
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 1rem;
        transition: background 0.3s;
    }

    .join-btn:hover {
        background-color: #5b6eae;
    }

    .card-header {
        background-color: #7289da;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
